		img.alina(src="/portfolio/portfolio-assets/solid-nutrition-london/img/alina_large.png", alt="Alina Kuznecova holding weights")
		img.protein(src="/portfolio/portfolio-assets/solid-nutrition-london/img/protein.png", alt="Solid Nutrition London Protein Products")
