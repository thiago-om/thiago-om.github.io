:verbatim
  ---
  layout: default
  ---

.post
  h1.post-title {{ page.title }}
  span.post-date {{ page.date | date_to_string }}
  {{ content }}

.related
  h2 Related Posts
  ul.related-posts
    {% for post in site.related_posts limit:3 %}
    li
      h3
        a(href="{{ post.url }}")
          {{ post.title }}
          small {{ post.date | date_to_string }}

    {% endfor %}
