block config
	include /_templates/config
	-var jQuery = true
	-var PullDown = false

doctype
html( xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" )
	block head
		include /_templates/head
			//- != css('/')
			link(rel="stylesheet", href="/assets/css/06-pages/single-thought.css")
	body.blog.thought
		if pullDown
			//- invisible checkbox for toggling pulldown
			input#pulldowntoggler(type="checkbox")
		.page-wrap
			.page-content
				if pullDown
					include /_templates/site-header

				block content

				if pullDown
					include /_templates/coolform
		block comments
			if disqus
				#disqus_thread
				script.
					/* * * CONFIGURATION VARIABLES * * */
					var disqus_shortname = 'thiagodebastos';
					/* * * DON'T EDIT BELOW THIS LINE * * */
					(function() {
					var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
					dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
					(document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
					})();
				noscript
					| Please enable JavaScript to view the
					a(href="https://disqus.com/?ref_noscript", rel="nofollow") comments powered by Disqus.
		block vendorJS
			if jQuery
				if locals.config.node_env == "production"
					script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
				if locals.config.node_env == "development"
					script(src="/assets/js/vendor/jquery-2.1.3.min.js")
		block siteJS
			!= js('/')

	block footer
		footer
			a(href='/') &laquo; back to home
