block config
	include /_templates/config

doctype
html( xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en" )

	block head
		include /_templates/head
			!= css('/')

	body
		if pullDown
			//- invisible checkbox for toggling pulldown
			input#pulldowntoggler(type="checkbox")
		.page-wrap
			.page-content
				if pullDown
					include /_templates/site-header

				block content

				if pullDown
					include /_templates/coolform
		block comments

		block vendorJS
			if jQuery
				if locals.config.node_env == "production"
					script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
				if locals.config.node_env == "development"
					script(src="/assets/js/vendor/jquery-2.1.3.min.js")


		block siteJS
			!= js('/')

	footer
		block footer
