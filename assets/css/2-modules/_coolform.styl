.coolform
	input
		background: none
		border: solid 4px $color-primary
		color: $color-primary
		padding: 15px 40px
		font-size: 18px
		display: inline-block
		&:focus,
		&:active
			outline: none
		&[type="text"],
		&[type="email"]
			border: none
			border-bottom: solid 4px $color-primary
		&[type="submit"]
			&:active
				color: white
				background: $color-primary
	.input-group
		display: inline-block
		margin-right: 20px
		position: relative
		input
			padding: 15px 0px
		label
			// TODO: @bourbon
			position: absolute
			top: 50%
			left: 0px
			transform: translateY(-50%)
			font-family: "Lato"
			font-style: italic
			font-size: 18px
			font-weight: 300
			color: #999999
			pointer-events: none
			// TODO: @bourbon
			transition: all, .5s, linear
		input:focus + label,
		input.has-value + label
			top: -1*10px
			font-size: 12px
			color: #aaaaaa
