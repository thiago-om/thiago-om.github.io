/*** Transitions *** */
.isotope
	transition-duration: 0.5s
.isotope
	transition-property: height, width
.isotope .isotope__element
	transition-property: left, right, top
.isotope
	margin: 0 auto
	font-size: 1rem
	&__element
		display: inline-block
		margin-bottom: 18px
		font-size: 0.58em
		line-height: 0.5em
		background: white
		position: relative
		overflow: hidden
		text-decoration: none
		color: black
		box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.7)
		border: 3px solid white
		h2, em
			position: absolute
			bottom: 10px
			padding: 0 6px
		h2
			color: #555555
			font-family: $helvetica
		em
			color: #777777
			font-family: $georgia
			font-style: normal
		&--cover
			background: url(http://lorempixel.com/400/200) no-repeat top left
			background-color: whitesmoke
			min-width: 100%
			height: 100%
			position: absolute
			top: 0px
			left: 0px
			transition: all, 0.075s, linear
			&:hover
				top: -1*40px
				border-bottom: 3px solid $color-primary

