.button
	display inline-block
	padding 0.5em 1.0em
	background #EEE
	border none
	border-radius 7px
	background-image linear-gradient( to bottom, hsla(0, 0%, 0%, 0), hsla(0, 0%, 0%, 0.2) )
	color #222
	font-family sans-serif
	font-size 16px
	text-shadow 0 1px white
	cursor pointer
	&:hover
		background-color #8CF
		text-shadow 0 1px hsla(0, 0%, 100%, 0.5)
		color #222
	&.is-checked
		color white
		text-shadow 0 -1px hsla(0, 0%, 0%, 0.8)
	&:active
		box-shadow inset 0 1px 10px hsla(0, 0%, 0%, 0.8)

.button:active,
.button.is-checked
	background-color #28F

.button-group
	&:after
		content ''
		display block
		clear both
	.button
		float left
		border-radius 0
		margin-left 0
		margin-right 1px
		&:first-child
			border-radius 0.5em 0 0 0.5em
		&:last-child
			border-radius 0 0.5em 0.5em 0


	&.thoughts
		background #F80
		background hsl(  36, 100%, 50%)
	&.creations
		background #F08
		background hsl( 324, 100%, 50%)
	&.code
		background #0FF
		background hsl( 180, 100%, 50%)
	&.portfolio
		background #0F0
		background hsl( 108, 100%, 50%)

.category--thoughts
	width: (245/1.5)px
	height: (660/1.5)px
.category--creations
	width: (245/1.5)px
	height: (660/1.5)px
.category--portfolio
	width: (505/1.5)px
	height: (245/1.5)px
