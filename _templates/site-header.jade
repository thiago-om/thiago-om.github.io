header.site-header
	.site-header__wrap
		div(class='site-header ' + PageTheme)
			.site-header__logo
				h3
					| thiago
					span debastos

			nav.site-header__links
				#filters.button-group
					button.button.is-checked(data-filter="*") show all
					button.button(data-filter=".category--thoughts") thoughts
					button.button(data-filter=".category--creations") creations
					button.button(data-filter=".category--code") code
					button.button(data-filter=".category--portfolio") portfolio
					button.button(data-filter=".featured") featured
					label.toggle.button.close(for="pulldowntoggler") newsletter
				if site.posts.all().length > 10
					#sorts.button-group
						button.button(data-sort-by="date" data-sort-ascending="false") date
						button.button(data-sort-by="category") category
						button.button(data-sort-by="original-order") reset

			.site-header__right
				.social-icons
					div
						a.icon-behance(href="http://www.behance.net/" + locals.author.behance target="_blank")
					div
						//- TODO: change google url when receive custom page url
						a.icon-google-plus(href="https://plus.google.com/u/" + locals.author.google target="_blank")
					div
						a.icon-facebook(href="https://www.facebook.com/" + locals.author.facebook target="_blank")
					div
						a.icon-twitter(href="https://www.twitter.com/" + locals.author.twitter target="_blank")
					div
						a.icon-github(href="https://github.com/" + locals.author.github target="_blank")
